---
import { Icon } from "astro-icon/components";
interface Props {
  name: string; // Iconify name of the icon
  size: number;
  label: string; // Label for the icon
  colour?: string;
}
const { name, size, label, colour} = Astro.props
---
<li>
  <Icon name={name} size={size} color={colour} />
  <p>{label}</p>
</li>
<style>
  li {
      display: flex;
      flex-direction: column;
      flex-wrap: wrap;
      align-items: center;
      justify-content: space-evenly;
    }
</style>
