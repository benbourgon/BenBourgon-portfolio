---
/* components/ContactSection/Contact.astro */
import SectionHeading from "../ui/SectionHeading.astro";
import { Icon } from "astro-icon/components";
---
<section class="contact | section | bg-primary-500" id="contact">
  <div class="wrapper">
    <SectionHeading
      preamble={"get in touch"}
      heading={"contact"}
      colour={"text-neutral-0"}
    />
    <form
      action="https://formspree.io/f/mgedpvld"
      method="POST"
      class="contact-form"
    >
      <label for="name" class="sr-only">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        class="name-input"
        placeholder="Name"
        required
      />
      <div class="phone-email-inputs">
        <label for="phone" class="sr-only">Phone (optional)</label>
        <input
          type="text"
          name="phone"
          id="phone"
          class="phone-input"
          placeholder="Phone (optional)"
        />
        <label for="email" class="sr-only">Email</label>
        <input
          type="text"
          name="email"
          id="email"
          class="email-input"
          placeholder="Email"
        />
      </div>
      <label for="messageBox" class="your-message-label"
        >Your Message:</label
      >
      <textarea
        name="messageBox"
        id="messageBox"
        class="message-box"
        cols="30"
        rows="10"></textarea>
      <button type="submit" class="send-button">Send</button>
    </form>
    <p class="or">or</p>
    <a
      href="mailto:benjaminbourgon@gmail.com"
      class="contact-email-address">benjaminbourgon@gmail.com
    </a>
    <nav>
      <ul>
        <li>
          <a
            href="https://github.com/benbourgon"
            target="_blank"
            rel="noopener"
            aria-label="My GitHub Profile"
          >
            <Icon name="fa6-brands:github" size={48} />
          </a>
        </li>
        <li>
          <a
            href="https://www.linkedin.com/in/benbourgon/"
            target="_blank"
            rel="noopener"
            aria-label="My LinkedIn Profile"
          >
            <Icon name="devicon-plain:linkedin" size={48} />
          </a>
        </li>
        <li>
          <a
            href="mailto:benjaminbourgon@gmail.com"
            aria-label="Send me an email"
          >
          <Icon name="material-symbols:mail-outline-rounded" size={48} />
          </a>
        </li>
        <li>
          <a
            href="https://calendly.com/benbourgon"
            target="_blank"
            rel="noopener"
            aria-label="Schedule a meeting"
          >
            <Icon name="material-symbols:event-available-outline-rounded" size={48} />
          </a>
        </li>
      </ul>
    </nav>
  </div>
  <!--.wrapper ends-->
</section>
<!--contact section ends-->
<style lang="scss">
@use "../../sass/abstracts" as *;

.contact {
	width: 100%;
	max-width: 100%;

	.wrapper {
		overflow: hidden;
	}

	form,
	.phone-email-inputs {
		display: flex;
		flex-direction: column;
		flex-wrap: wrap;
		align-items: center;
	}
	form {
		width: 99%;
		max-width: 99%;
	}
	.phone-email-inputs {
		width: 100%;
	}
	input,
	textarea {
		padding: 10px 5px;
		margin: 10px 0;
		border: none;
		border-bottom: 1px solid white;
		transition: 0.1s;
		background-color: $blue-sapphire;
		width: 100%;
		max-width: 100%;
		height: 50px;

		&::placeholder,
		&::-webkit-input-placeholder,
		&::-moz-placeholder {
			opacity: 1;
			color: white;
		}

		&:focus,
		&:hover {
			border-bottom: 3px solid white;
		}
		&:focus {
			background-color: white;
			color: black;
			outline: 3px solid white;
			&::placeholder,
			&::-webkit-input-placeholder,
			&::-moz-placeholder {
				color: black;
			}
		}
	}
	textarea {
		height: 275px;
		max-width: 100%;
		border: 1px solid white;
		&:focus,
		&:hover {
			border: 3px solid white;
		}
	}
	.your-message-label {
		padding: 25px 5px 5px 2px;
		color: white;
		align-self: flex-start;
		width: 90%;
		display: block;
	}

	.send-button {
		width: 200px;
		height: 50px;
		border: 1px solid white;
		border-radius: 25px;
		padding: 10px 0;
		margin: 25px 0;
		cursor: pointer;

		&:focus {
			outline: 3px solid white;
		}
		&:active {
			background-color: white;
			color: black;
			border: none;
			outline: none;
		}
	}
	a:focus {
		outline: 3px solid white;
	}
	nav {
		max-width: 100%;
		overflow: hidden;
	}
	ul {
		display: flex;
		width: 250px;
		flex-wrap: wrap;
		justify-content: space-evenly;
		li {
			display: flex;
			justify-content: center;
			width: 20%;
			max-width: 20%;
		}
		a {
			max-width: 100%;
			padding: 0 5px;
			z-index: 10;
		}
		i {
			display: block;
			max-width: 100%;
		}
	}
}
/* 768px Contact section media queries */
@include mq("medium") {
  .contact {
    .phone-email-inputs {
      flex-direction: row;
      justify-content: space-between;

      input {
        flex-basis: 49%;
      }
    }
  }
}
</style>
